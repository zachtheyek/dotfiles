# Disable update checks (less intrusive)
# check_for_updates_on_startup 0

# Use new keybind parsing
use_legacy_keybinds 0

# Don't load tutorial on startup
should_load_tutorial_when_no_other_file 0

# Light mode colors (comfortable for extended reading)
background_color 0.95 0.95 0.95

# Dark mode colors (true black for OLED screens)
dark_mode_background_color 0.0 0.0 0.0
dark_mode_contrast 0.85

# Highlight colors
text_highlight_color 1.0 1.0 0.0
search_highlight_color 0.3 1.0 0.3
link_highlight_color 0.2 0.5 1.0
synctex_highlight_color 1.0 0.3 0.8

# Visual mark color (subtle)
visual_mark_color 0.2 0.2 0.2 0.15

# Comfortable scroll amounts
vertical_move_amount 1.5
horizontal_move_amount 1.5

# Keep context when scrolling (don't move full screen)
move_screen_ratio 0.75

# Visual mark positioning (optimal for reading flow)
visual_mark_next_page_fraction 0.7
visual_mark_next_page_threshold 0.3

# Reasonable zoom increment
zoom_inc_factor 1.2

# Default fit ratio for fit_to_page_width_ratio command
fit_to_page_width_ratio 0.85

# Zoom on cursor position (more intuitive)
wheel_zoom_on_cursor 1

# Use linear filtering for smoother appearance
linear_filter 1

# Show hierarchical TOC (easier to navigate)
flat_toc 0

# Don't collapse TOC by default
collapsed_toc 0

# Auto-create TOC if missing
create_table_of_contents_if_not_exists 1
max_created_toc_size 8000

# External search URLs (useful for academic reading)
search_url_g https://www.google.com/search?q=
search_url_s https://scholar.google.com/scholar?q=
search_url_l http://gen.lib.rus.ec/scimag/?q=
search_url_d https://duckduckgo.com/?q=

# Middle click search engines
middle_click_search_engine s
shift_middle_click_search_engine l

# Fast search (enable if you have large PDFs)
super_fast_search 1

# Case-insensitive search by default (more convenient)
case_sensitive_search 0

# Single window mode (easier to manage)
should_launch_new_window 0
should_launch_new_instance 0

# Don't auto-use multiple monitors (manual control)
should_use_multiple_monitors 0

# Rerender overview for better quality
rerender_overview 1

# Draw unrendered pages (better visual feedback)
should_draw_unrendered_pages 1

# Prerender in presentation mode (smoother transitions)
prerender_next_page_presentation 1

# Sort bookmarks by location (more logical)
sort_bookmarks_by_location 1

# Better menu appearance
multiline_menus 1

# Show full paths in recent documents
show_doc_path 0

# Single click for character selection (more precise)
single_click_selects_words 0

# Use ruler mode (highlight current line and mask others)
ruler_mode 1
ruler_padding 2.0
ruler_x_padding 8.0

# Customize status bar (optional - uncomment to use)
# status_bar_color 0.1 0.1 0.1
# status_bar_text_color 0.9 0.9 0.9
# status_bar_font_size 14

# Nord-inspired custom color scheme (for toggle_custom_color)
custom_background_color 0.180 0.204 0.251
custom_text_color 0.847 0.871 0.914

# Commands to run on startup (uncomment to enable)
# startup_commands toggle_visual_scroll
# startup_commands toggle_custom_color

# ========== SYNCTEX (for LaTeX users) ==========

# Configure inverse search command for your editor
# For VS Code:
# inverse_search_command "/Applications/Visual Studio Code.app/Contents/Resources/app/bin/code" -r -g "%1:%2"
#
# For Neovim with nvr (if you use it):
# inverse_search_command nvr --remote-silent +%2 "%1"
#
# For MacVim:
# inverse_search_command mvim --remote-silent +%2 "%1"

# ========== PAGE SEPARATOR ==========

# Subtle page separator
page_separator_width 2
page_separator_color 0.85 0.85 0.85

# ========== TOUCHPAD ==========

# Adjust if scrolling is too fast/slow
touchpad_sensitivity 1.0

# ========== MISC ==========

# Show key override warnings (helpful for debugging config)
should_warn_about_user_key_override 1

# Enable experimental features (if you want cutting-edge features)
# enable_experimental_features 1

# ========== HIGHLIGHT COLORS (a-z) ==========
# You can highlight text and press a-z to color-code it
# These are sensible defaults for different highlight purposes

# Red - Important/Critical
highlight_color_r 1.00 0.20 0.20

# Yellow - General highlight
highlight_color_y 1.00 0.95 0.40

# Green - Understood/Completed
highlight_color_g 0.40 0.95 0.40

# Blue - Questions/To investigate
highlight_color_b 0.40 0.70 1.00

# Orange - Examples
highlight_color_o 1.00 0.70 0.20

# Purple - Definitions
highlight_color_p 0.85 0.50 1.00

# Pink - Key concepts
highlight_color_k 1.00 0.75 0.85

# Cyan - References/Citations
highlight_color_c 0.50 0.95 0.95

# Gray - Low priority
highlight_color_h 0.70 0.70 0.70

# Keep remaining colors as defaults
highlight_color_a 0.94 0.64 1.00
highlight_color_d 0.30 0.00 0.36
highlight_color_e 0.10 0.10 0.10
highlight_color_f 0.00 0.36 0.19
highlight_color_i 0.50 0.50 0.50
highlight_color_j 0.58 1.00 0.71
highlight_color_l 0.62 0.80 0.00
highlight_color_m 0.76 0.00 0.53
highlight_color_n 0.00 0.20 0.50
highlight_color_q 0.26 0.40 0.00
highlight_color_s 0.37 0.95 0.95
highlight_color_t 0.00 0.60 0.56
highlight_color_u 0.88 1.00 0.40
highlight_color_v 0.45 0.04 1.00
highlight_color_w 0.60 0.00 0.00
highlight_color_x 1.00 1.00 0.50
highlight_color_z 1.00 0.31 0.02
